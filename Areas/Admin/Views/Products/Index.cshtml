@model IEnumerable<fastwebsite.Entities.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    
    <a href="@Url.Action("Create", "Products", new { area = "Admin" })" class="btn btn-primary mb-3">Create New Product</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Des)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Cate)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Img)</td>
                    <td>@Html.DisplayFor(modelItem => item.Des)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cate.Name)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Products", new { area = "Admin", id = item.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                        <form action="@Url.Action("Delete", "Products", new { area = "Admin", id = item.ProductId })" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
