@model IEnumerable<fastwebsite.Entities.Category>

@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Categories";
}

<a href="@Url.Action("Create", "Categories", new { area = "Admin" })" class="btn btn-primary mb-3">Create New Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Categories", new { id = category.CateId, area = "Admin" })" class="btn btn-warning">Edit</a>

                    <form action="@Url.Action("Delete", "Categories", new { id = category.CateId, area = "Admin" })" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
