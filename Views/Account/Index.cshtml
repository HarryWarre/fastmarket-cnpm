@model fastwebsite.Entities.Customer

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<h2>Thông tin tài khoản</h2>

<div>
    <p>Email: @Model.Email</p>
    <p>Tên: @Model.Name</p>
    <p>Số điện thoại: @Model.Phone</p>
    <p>Địa chỉ: @Model.Address</p>
</div>

<a href="@Url.Action("Update", "Account")" class="btn btn-primary">Chỉnh sửa thông tin tài khoản</a>